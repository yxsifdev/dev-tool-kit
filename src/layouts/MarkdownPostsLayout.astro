---
import MainLayout from "./MainLayout.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<MainLayout title={title}>
  <slot />
</MainLayout>

<style is:global>
  pre {
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 14px;
    max-height: 500px;
    border: 1px solid #252525;
    margin: 15px 0;
  }

  p > code {
    padding-left: 0.25rem;
    padding-right: 0.25rem;
    background-color: #2dd4bf;
    font-weight: bold;
    color: #101010;
    padding-top: 0.125rem;
    padding-bottom: 0.125rem;
  }

  em > code {
    padding: 0 0.25rem;
    /* padding-top: 0.125rem;
    padding-bottom: 0.125rem; */
    border-radius: 3px;
    background-color: #2dd4bf;
    font-weight: bold;
    color: #101010;
  }

  pre code {
    font-family:
      "Roboto Mono Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }
</style>

---
import MainLayout from "./MainLayout.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<MainLayout title={title}>
  <slot />
</MainLayout>

<style is:global>
  :root {
    --primaryColor: #2dd4bf;
  }
  pre {
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 14px;
    max-height: 500px;
    border: 1px solid #252525;
    margin: 15px 0;
  }

  p > code {
    padding-left: 0.25rem;
    padding-right: 0.25rem;
    background-color: var(--primaryColor);
    font-weight: bold;
    color: #101010;
    padding-top: 0.125rem;
    padding-bottom: 0.125rem;
  }

  em > code {
    padding: 0 0.25rem;
    /* padding-top: 0.125rem;
    padding-bottom: 0.125rem; */
    border-radius: 3px;
    background-color: var(--primaryColor);
    font-weight: bold;
    color: #101010;
  }

  pre code {
    font-family:
      "Roboto Mono Variable",
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    font-size: 0.875rem /* 14px */;
    line-height: 1.25rem /* 20px */;
  }

  h2 {
    font-size: 1.125rem /* 18px */;
    line-height: 2.75rem /* 28px */;
    font-weight: 500;
    color: var(--primaryColor);
  }

  h3 {
    font-size: 1rem /* 16px */;
    line-height: 2.5rem /* 24px */;
    font-weight: 500;
    color: var(--primaryColor);
  }
  img {
    max-width: 500px;
    width: 100%;
    margin: 16px auto;
    border-radius: 3px;
  }

  strong {
    color: var(--primaryColor);
  }

  span {
    color: #a3a3a3;
  }

  span code {
    padding-left: 0.25rem;
    padding-right: 0.25rem;
    background-color: #a3a3a345;
    font-weight: bold;
    color: #a3a3a3;
    padding-top: 0.125rem;
    padding-bottom: 0.125rem;
  }
</style>

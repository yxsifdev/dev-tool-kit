---
import { LinksList } from "@/consts/links";
import GitHub from "src/icons/GitHub.astro";
import X from "src/icons/X.astro";
---

<header
  class="flex items-center justify-between w-full py-5 mx-auto my-0 max-w-7xl"
>
  <div class="flex items-center space-x-5">
    <div class="p-1 text-sm font-bold bg-teal-400 text-textBg">
      [DevToolKit]
    </div>
    <nav class="hidden md:flex gap-x-4">
      {
        LinksList.map((link) => (
          <a
            href={link.path}
            class="text-sm border-b border-transparent hover:border-teal-400"
          >
            <span class="-mr-2 text-white/30">./</span>
            <span class="text-teal-400">{link.label}</span>
          </a>
        ))
      }
    </nav>
  </div>
  <div class="items-center hidden md:flex gap-x-3">
    <a href="https://github.com/yxsifdev/dev-tool-kit" target="_blank"
      ><GitHub /></a
    >
    <a href="https://x.com/yxsifdev" target="_blank"><X /></a>
  </div>
</header>

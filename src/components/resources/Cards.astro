---
import resources from "@/data/resources.json";
---

<div
  class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4"
>
  {
    resources.map((res) => (
      <a
        href={res.url}
        class="p-2 border-2 border-transparent bg-bgDark1 hover:border-primaryColor"
      >
        <h2 class="font-bold">{res.name}</h2>
        <p class="text-sm text-white/50">{res.description}</p>
      </a>
    ))
  }
</div>
